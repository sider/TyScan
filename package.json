{
  "name": "tyscan",
  "version": "0.1.0",
  "description": "Command line tool for scanning TypeScript sources",
  "bin": {
    "tyscan": "./build/bin.js"
  },
  "scripts": {
    "build": "tsc --outDir build",
    "format": "tslint --fix --project tsconfig.json 'src/**/*.ts'",
    "test": "nyc mocha test/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sider/TyScan.git"
  },
  "author": "Tomoki Nakamaru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sider/TyScan/issues"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "fast-glob": "^2.2.4",
    "js-yaml": "^3.12.0",
    "parsimmon": "^1.12.0",
    "pjson": "^1.0.9",
    "tsconfig": "^7.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/commander": "^2.12.2",
    "@types/js-yaml": "^3.11.2",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.9",
    "@types/parsimmon": "^1.10.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.1",
    "tsutils": "^3.5.0",
    "typescript": "^3.2.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true
  }
}
