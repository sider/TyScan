{
  "name": "tyscan",
  "version": "0.2.0",
  "description": "Command line tool for scanning TypeScript sources",
  "bin": {
    "tyscan": "./bin/tyscan.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json --outDir dist",
    "format": "tslint --fix --project tsconfig.json",
    "prepare": "npm run build",
    "test": "nyc mocha test/*.ts --no-timeouts",
    "watch": "tsc --watch --project tsconfig.json --outDir dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sider/TyScan.git"
  },
  "author": "Tomoki Nakamaru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sider/TyScan/issues"
  },
  "dependencies": {
    "commander": "^2.19.0",
    "fast-glob": "^2.2.6",
    "js-yaml": "^3.13.0",
    "parsimmon": "^1.12.0",
    "prompt-sync": "^4.1.6",
    "prompt-sync-history": "^1.0.1",
    "tsconfig": "^7.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/commander": "^2.12.2",
    "@types/js-yaml": "^3.12.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.0",
    "@types/parsimmon": "^1.10.0",
    "@types/prompt-sync": "^4.1.0",
    "@types/prompt-sync-history": "^1.0.1",
    "@types/typescript": "^2.0.0",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "tsutils": "^3.9.1",
    "typescript": "^3.4.1"
  },
  "peerDependencies": {
    "typescript": "2 || 3"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true
  }
}
