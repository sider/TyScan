{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run tyscan test",
            "program": "${workspaceFolder}/bin/tyscan.js",
            "args": ["test", "-c", "sample/tyscan.yml"],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
